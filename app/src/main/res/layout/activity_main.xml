<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:gravity="center">

        <TextView
            android:id="@+id/ekran_txt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:text=""
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="4"
            android:rowCount="6">



           <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/off"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#E60A0A"
                android:text="OFF"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AC"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="AC"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backspace"
                android:layout_row="0"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="del"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kopaytir"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="*"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yetti"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="7"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sakkiz"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="8"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/toqqiz"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="9"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boluv"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="/"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tort"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="4"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/besh"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="5"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/olti"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="+"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bir"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ikki"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="2"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uch"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="60dp"
                android:background="#A39F9F"
                android:text="3"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="60dp"
                android:background="#F57F17"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nol"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="110dp"
                android:background="#A39F9F"
                android:text="0"
                android:textAlignment="center"
                android:layout_rowSpan="2"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/foiz"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="52dp"
                android:background="#A39F9F"
                android:text="%"
                android:textAlignment="center"
                android:textSize="30sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vergul"
                android:layout_margin="2dp"
                android:width="98dp"
                android:height="110dp"
                android:background="#A39F9F"
                android:text="."
                android:textAlignment="center"
                android:layout_rowSpan="2"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tenglik"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="110dp"
                android:layout_rowSpan="2"
                android:background="#F57F17"
                android:text="="
                android:textAlignment="center"
                android:textSize="30sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ildiz"
                android:layout_margin="2dp"
                android:width="100dp"
                android:height="58dp"
                android:background="#757474"
                android:text="SQRT"
                android:textAlignment="center"
                android:textSize="30sp" />


        </GridLayout>
    </LinearLayout>
</LinearLayout>



